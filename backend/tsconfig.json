{
  "compilerOptions": {
    "target": "ES6",
    "types": ["jest"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",  
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "__tests__"]
}